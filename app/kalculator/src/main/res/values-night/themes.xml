    <!--    Тема приложения (темная)-->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/blue_grey_900</item>
        <item name="materialButtonStyle">@style/Widget.Calc.ButtonStyle</item>
        <item name="textInputStyle">@style/Widget.Calc.TextInputStyle</item>
    </style>

    <!--    стиль TextInputLayout-->
    <style name="Widget.Calc.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">@dimen/display_stroke_width</item>
        <item name="boxStrokeColor">@color/blue_grey_700</item>
        <item name="boxBackgroundColor">@color/blue_grey_100</item>
    </style>

    <!--стиль TextInputEditText (не смог задать этот стиль через свойство editTextStyle в стиле TextInputLayout,
    указал напрямую в макете)-->
    <style name="Widget.Calc.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Calc.InputText</item>
        <item name="android:text">0</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/display_padding_top</item>
        <item name="android:paddingBottom">@dimen/display_padding_bottom</item>
    </style>

    <!--    стиль текста в TextInputEditText-->
    <style name="TextAppearance.Calc.InputText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/display_text_size</item>
    </style>

    <!--    Общий стиль кнопок -->
    <style name="Widget.Calc.ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/blue_grey_100</item>
        <item name="android:insetLeft">@dimen/btn_margin_start</item>
        <item name="android:insetRight">@dimen/btn_margin_end</item>
        <item name="android:insetTop">@dimen/btn_margin_top</item>
        <item name="android:insetBottom">@dimen/btn_margin_bottom</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/blue_grey_700</item>
    </style>

    <!--    Стиль для кнопки backspace -->
    <style name="Widget.Calc.ButtonStyle.BS" parent="Widget.Calc.ButtonStyle">
        <item name="icon">@drawable/ic_action_name</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconTint">@color/blue_grey_100</item>
        <item name="iconSize">@dimen/btn_text_size</item>
    </style>

    <!--    Цвет для не цифровых кнопок -->
    <style name="Widget.Calc.ButtonStyle.Grey400" parent="Widget.Calc.ButtonStyle">
        <item name="backgroundTint">@color/blue_grey_600</item>
    </style>

    <!--    Немножко уменьшил размер текста, для кнопок с заглавными буквами C, MC, MR, M+, M- -->
    <style name="Widget.Calc.ButtonStyle.LetterTextSize" parent="Widget.Calc.ButtonStyle">
        <item name="android:textSize">@dimen/btn_text_size_letter</item>
    </style>

</resources>